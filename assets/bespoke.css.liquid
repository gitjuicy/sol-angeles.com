/*********

header

*********/

/* hide default menu */

.main-header .bottom-row .menu-container,
.main-header .top.row,
.main-header .cart {

  display: none;

}

.main-header .bottom-row {

  padding: 0;

}

/* mobile menu */

.main-header .mobile-tools {

  position: absolute;
  display: block;
  right: 0;
  top: 0;

}

.main-header .mobile-menu {

  text-transform: uppercase;
  text-align: right;

}

.main-header .mobile-menu .nav-item:nth-child(1) a {

  padding-top: 65px;

}

.main-header .mobile-menu .nav-item a {

  padding: 10px 22px;
  width: 100%;

}

.bespoke-logo {

  position: absolute;
  max-width: 400px;
  margin: auto;
  right: 0;
  left: 0;

}


/*********

homepage

*********/

/* featured collection */



.bespoke.product-grid {

  text-align: center;
  font-size: 0;
  width: 100%;
  padding: 0;

}

.bespoke.product-grid .price,
.bespoke.product-grid .title {

  text-transform: none;
  padding: 0 0 0 10px;
  line-height: 1.5;
  text-align: left;
  font-size: 12px;
  margin: 0;

}

.bespoke.product-grid .product-item {

  display: inline-block;
  margin: .25% .5% .5% .5%;
  vertical-align: top;
  font-size: initial;
  width: 15.66%;
  float: none;

  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  -webkit-box-shadow: 0px 10px 16px rgba(0,0,0,0.1);
  -moz-box-shadow: 0px 10px 16px rgba(0,0,0,0.1);
  box-shadow: 0px 10px 16px rgba(0,0,0,0.1);

}

.bespoke.product-grid .image-wrapper {

  -webkit-border-top-left-radius: 4px;
  -moz-border-top-left-radius: 4px;
  border-top-left-radius: 4px;
  -webkit-border-top-right-radius: 4px;
  -moz-border-top-right-radius: 4px;
  border-top-right-radius: 4px;
  border: 1px solid #f3f3f3;

}

.bespoke.product-grid .image-wrapper img {

  -webkit-border-top-left-radius: 4px;
  -moz-border-top-left-radius: 4px;
  border-top-left-radius: 4px;
  -webkit-border-top-right-radius: 4px;
  -moz-border-top-right-radius: 4px;
  border-top-right-radius: 4px;

}

/* sold out text */

.bespoke.product-grid .circle {

  text-transform: uppercase;
  -webkit-border-radius: 0;
  -moz-border-radius: 0;
  -ms-border-radius: 0;
  -o-border-radius: 0;
  position: absolute;
  border-radius: 0;
  text-align: left;
  display: block;
  background: none;
  line-height: 1.5;
  z-index: 1;
  padding: 0;
  top: 100%;
  right: auto;
  height: 30px;
  width: 100%;

}

.bespoke.product-grid .caption {

  margin: 25px 0 10px 0;

}

.bespoke.product-grid .circle.buy span {

  color: #a79764;

}

.bespoke.product-grid .circle span {

  margin-left: 10px;
  max-width: 100%;
  font-size: 13px;
  line-height: 1.5;

}


/*

media queries

*/

/* frontpage */

@media (max-width: 980px) {

  .bespoke.product-grid .product-item {

      display: inline-block;
      width: 24%;

  }

}

@media (max-width: 768px) {

  .bespoke.product-grid .product-item {

      display: inline-block;
      width: 32.33%;

  }

}

@media only screen and (min-width: 768px) {

  main-header .mobile-menu {
display: none;
}

}
