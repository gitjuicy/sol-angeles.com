/*********

header

*********/

/* hide default menu */

.main-header .bottom-row .menu-container,
.main-header .top.row,
.main-header .cart {

  display: none;

}

.main-header .bottom-row {

  padding: 0;

}

/* mobile menu */

.main-header .mobile-tools {

  position: absolute;
  display: block;
  right: 0;
  top: 0;

}

.main-header .mobile-menu {

  text-transform: uppercase;
  text-align: right;

}

.main-header .mobile-menu .nav-item:nth-child(1) a {

  padding-top: 65px;

}

.main-header .mobile-menu .nav-item a {

  padding: 10px 22px;
  width: 100%;

}

.bespoke-logo {

  position: absolute;
  max-width: 400px;
  margin: auto;
  right: 0;
  left: 0;

}


/*********

homepage

*********/

/* featured collection */



.bespoke.product-grid {

  text-align: center;
  padding: 0 50px;
  font-size: 0;
  width: 100%;

}

.bespoke.product-grid .title,
.bespoke.product-grid .title a {

  font-size: 12px;

}

.bespoke.product-grid .price,
.bespoke.product-grid .vendor a {

  font-size: 10px;

}

.bespoke.product-grid .product-item {

  display: inline-block;
  margin: 6px 6px 4px;
  vertical-align: top;
  font-size: initial;
  width: 16.66%;
  float: none;

  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  -webkit-box-shadow: 0px 10px 16px rgba(0,0,0,0.1);
  -moz-box-shadow: 0px 10px 16px rgba(0,0,0,0.1);
  box-shadow: 0px 10px 16px rgba(0,0,0,0.1);

}

.bespoke.product-grid .image-wrapper {

  -webkit-border-top-left-radius: 4px;
  -moz-border-top-left-radius: 4px;
  border-top-left-radius: 4px;
  -webkit-border-top-right-radius: 4px;
  -moz-border-top-right-radius: 4px;
  border-top-right-radius: 4px;
  border: 1px solid #f3f3f3;

}

.bespoke.product-grid .image-wrapper img {

  -webkit-border-top-left-radius: 4px;
  -moz-border-top-left-radius: 4px;
  border-top-left-radius: 4px;
  -webkit-border-top-right-radius: 4px;
  -moz-border-top-right-radius: 4px;
  border-top-right-radius: 4px;

}


/*

media queries

*/

/* frontpage */

@media (max-width: 980px) {

  .bespoke.product-grid .product-item {

      display: inline-block;
      float: none;
      width: 20%;

  }

}

@media (max-width: 768px) {

  .bespoke.product-grid .product-item {

      display: inline-block;
      float: none;
      width: 25%;

  }

}

@media only screen and (min-width: 768px) {

  main-header .mobile-menu {
display: none;
}

}
